@using Microsoft.AspNet.Identity
@model EventsPlannerMvc.Models.Event

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Event</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.EventDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EventDate, new { htmlAttributes = new { @class = "form-control",autocomplete="off" } })
                @Html.ValidationMessageFor(model => model.EventDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <br />
            <h4>Members</h4>
            <table style="width:100%">
                <tr>
                    <th>Search</th>
                    <th>Invited Members</th>
                </tr>
                <tr>
                    <td>
                        <input type="text" name="searchBox" placeholder="e.g. ramiz@test.com" />
                        <button type="button" id="searchButton">Add</button>
                    </td>
                    <td>
                        <ul id="membersList">
                            <li>@User.Identity.GetUserName()</li>
                        </ul>
                    </td>
                </tr>
            </table>
        </div>
        <br />
        <br />
        <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script language="javascript">
        $(document).ready(function() {
            $("#EventDate").datepicker({
                dateFormat: "dd-mm-yy"
            });

            $("#searchButton").click(function () {
                $("#membersList").prepend("<li>" + "test" + "</li>");
            });

        });
    </script>
<style>
    table, th, td {
        border: 1px solid gray;
        border-collapse: collapse;
    }
</style>
}
