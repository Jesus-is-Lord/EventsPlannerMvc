@model IEnumerable<EventsPlannerMvc.Models.Vote>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            Idea
        </th>
        <th>
            Voter
        </th>
        <th>
            Vote
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Idea1.Title<span>: </span> @item.Idea1.Description
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Member.User.Username)
        </td>
        <td>
            <div class="my-rating jq-stars" data-rating=@item.VoteCode1.Value></div>
        </td>
    </tr>
}

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <link href="~/Content/star-rating-svg.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.star-rating-svg.js"></script>
    <script language="javascript">
    $(document).ready(function () {

        $(".my-rating").starRating({
            starSize: 19,
            readOnly: true

        });
    });
    </script>



}
